


@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/layoutprofile.cshtml";
}
@model List<Customer>
    @using Conference.Models
@{ Customer c = (Customer)HttpContext.Current.Session["user"];}

<html>
<head>

    <title>
        Profile

    </title>
    <style>
        label {
            color: white;
            font-style: normal;
        }

        .first {
            float: left;
            width: 50%;
            height: 45%;
            background-color: #383838;
            position: relative;
        }

        .second {
            float: right;
            width: 50%;
            height: 45%;
            position: relative;
            background-color: #383838;
        }



        .down {
            position: absolute;
            background-color: white;
            width: 100%;
          overflow-y:scroll;
            clear: both;
            position: relative;
            height: 45%;
        }

        body {
            width: 100%;
            height: 100%;
        }



        h1 {
            font-family: "Comic Sans MS", cursive, sans-serif;
            color: yellow;
            word-wrap: break-word;
        }

        h3 {
            font-family: "Comic Sans MS", cursive, sans-serif;
            color: white;
            word-wrap: break-word;
        }


        h2 {
            font-family: "Comic Sans MS", cursive, sans-serif;
            color: wheat;
            word-wrap: break-word;
        }

        input {
            margin-top: 20px;
        }
        img {
            width: 220px;
            height: 220px;
        }
        .modalDialog {
            position: fixed;
            font-family: Arial, Helvetica, sans-serif;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: black;
            z-index: 99999;
            opacity: 0;
            -webkit-transition: opacity 400ms ease-in;
            -moz-transition: opacity 400ms ease-in;
            transition: opacity 400ms ease-in;
            pointer-events: none;
        }

            .modalDialog:target {
                opacity: 1;
                pointer-events: auto;
            }

            .modalDialog > div {
                width: 600px;
                height: 450px;
                position: relative;
                margin: 7% auto;
                padding: 5px 20px 13px 20px;
                border-radius: 10px;
                background: black;
                background-color: black;
                background: -moz-linear-gradient(#383838, #999);
                background: -webkit-linear-gradient(#383838, #999);
                background: -o-linear-gradient(#383838, #999);
            }

        .close {
            background: black;
            color: black;
            line-height: 25px;
            position: absolute;
            right: -12px;
            text-align: center;
            top: -10px;
            width: 24px;
            text-decoration: none;
            font-weight: bold;
            -webkit-border-radius: 12px;
            -moz-border-radius: 12px;
            border-radius: 12px;
            -moz-box-shadow: 1px 1px 3px #000;
            -webkit-box-shadow: 1px 1px 3px #000;
            box-shadow: 1px 1px 3px #000;
        }

            .close:hover {
                background: black;
            }


    </style>
    <script>
        function showDialog(x) {
            var r = confirm("Are you sure you want to delete?");
            if (r == true)
                window.location.assign("/Customer/Del?id=" + x);
            else
                ;
        }
		
		
                    function showDialog() {
                        
                        alert("Successfully Updated");
                    }
                 

    </script>




</head>
    




<body>
    @if (c != null)
    {
        foreach(var x in Model)
        {
            if(x.Id == c.Id)
            {
                
     

                 <h3 style="font-size:50px">This is me!</h3>

   
    <div class="container second">
      
        <form  action="EditCustomerProfile" style="margin-top:30px">
            <label>UserName:</label>  &nbsp;&nbsp;&nbsp;  &nbsp; <input type="text" name="Name" readonly value="@c.Name" /><br />
            <label>Email:</label> &nbsp;&nbsp;&nbsp;  &nbsp; <input type="email" style="margin-left:5%;" name="Email" readonly value="@c.Email" /><br />
            <label>Password:</label> &nbsp;&nbsp;&nbsp;  &nbsp; <input type="text" style="margin-left:5%;" name="Password" readonly value="@c.Password" /><br />
            <a href="#openModal" style="text-align:center;font-size:20px">Edit</a>
           
                              
        </form>


       </div>
        <div id="openModal" class="modalDialog">
        <div>
            <a href="#close" title="Close" class="close">X</a>
            <h3 style="text-align:center;">Edit Personal Information</h3>
         
@using (Html.BeginForm("EditCustomerProfile","Customer",FormMethod.Post))
{ 
            @Html.HiddenFor(m => x.Id);
                @Html.LabelFor(m => x.Name);
                @Html.EditorFor(m => x.Name);
                <br /><br /> 
                @Html.LabelFor(m => x.Email);
                @Html.EditorFor(m => x.Email);

                      <br /><br />
                   @Html.LabelFor(m => x.Password);
                   @Html.EditorFor(m => x.Password);
                  
                    <br /><br />
                     @Html.ActionLink("edit", "editcustomerdetails", new {@class ="btn btn-sucess"})<button onclick="showDialog()" class="btn" type="submit" value="Edit">Edit</button>
                    }
                </div>
              

               


    </div>        




    <div class="container down">

        <div class="wrapper" >
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>HotelId </th>
                        <th>CheckIn-Date</th>
                        <th>CheckOut-Date</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var w in ViewBag.bookings)
                            {
                        <tr>
                            <td>@w.RoomId</td>
                            <td>@w.CheckIn</td>
                            <td>@w.CheckOut</td>
                            



                            <td>@Html.ActionLink("Edit", "Booking", new { @class = "btn btn-primary" })<button onclick="showDialog(@w.Id)" class="btn btn-danger">Delete</button></td>
                        </tr>
                            }

                </tbody>
            </table>

        </div>

        </div>

                
            }
        }
    }



</body>

</html>
