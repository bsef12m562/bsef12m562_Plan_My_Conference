    Layout = "~/Views/Shared/layoutpreview.cshtml";
}
<html>
<head>
    <title>Preview</title>
    <style>
        body {
            width: 100%;
            height: 100%;
        }

        #first {
            float: left;
            width: 40%;
            height: 100%;
            background-color: blue;
        }

        #second {
            float: right;
            width: 60%;
            height: 100%;
            background-color: aquamarine;
        }


        .first {
            float: left;
            width: 40%;
            height: 100%;
            background-color: transparent;
            max-height: 100%;
            max-width: 100%;
        }

        .second {
            float: right;
            width: 60%;
            height: 100%;
            background-color: transparent;
            max-height: 100%;
            max-width: 100%;
        }

        img {
            margin-top: 10%;
            max-height: 100%;
            max-width: 100%;
        }


        h3 {
