@{
    ViewBag.Title = "abc";
    Layout = "~/Views/Shared/layout4cust.cshtml";
}
<html>
<head>
    <title>Contact Us</title>
    <style>
        label {
            color: white;
            font-style: normal;
        }

        .first {
            float: left;
            width: 70%;
            height: 40%;
            background-color: #383838;
            position: relative;
        }

        .second {
            float: right;
            width: 30%;
            height: 40%;
            position: relative;
            background-color: #383838;
        }



        .down {
            position: absolute;
            background-color: #383838;
            width: 100%;
            margin-top: inherit;
            clear: both;
            position: relative;
            height: 45%;
        }

        body {
            width: 100%;
            height: 100%;
        }



        h1 {
            font-family: "Comic Sans MS", cursive, sans-serif;
            color: yellow;
            word-wrap: break-word;
        }

        h3 {
            font-family: "Comic Sans MS", cursive, sans-serif;
            color: white;
            word-wrap: break-word;
        }


        h2 {
            font-family: "Comic Sans MS", cursive, sans-serif;
            color: wheat;
            word-wrap: break-word;
        }

        input {
            margin-top: 20px;
        }
    </style>
    <script>
        function showDialog() {
            alert("Your Feedback is successfully recorded.ThankYou");

        }

    </script>

</head>
<body>


    <h1 style="font-size:50px">CONTACT US</h1>
    <h4 style="color:whitesmoke;">
        we will be happy to answer any queries.We appreciate your feedback.
    </h4>

    <div class="container first">
        <form style="margin-top:30px" action="Feedback">
            <label>Name:</label>  &nbsp;&nbsp;&nbsp;  &nbsp; <input type="text" name="Name" required placeholder="Name" /><br />
            <label>Email:</label> &nbsp;&nbsp;&nbsp;  &nbsp; <input type="email" name="Email" required placeholder="Email" /><br />
            <label>Subject:</label> &nbsp; &nbsp;<input type="text" name="Subject" required placeholder="Subject" /><br />
            <label>Message:</label> &nbsp;<input type="text" style="width:190px; height:60px" name="Message" required placeholder="Message" /><br />
            <br />
            <button onclick="showDialog()" class="btn" type="submit" value="Submit" style="margin-left:15%;">Submit</button>
            }
        </form>
    </div>

    <div class="container second">
        <h2>Address</h2><br />
        <h3> 18 Johar Town, Lahore, Pakistan</h3>
        <h2>Email</h2><br />
        <h3>itheights@@olx.com.pk</h3><br />



    </div>




    <div class="container down">

        <a href="https://www.google.com/maps/place/ITHeight/31.472624,74.255391,15z/data=!4m2!3m1!1s0x0:0x9092691ed4e8c593"><img src="~/Images/mapthree.png" style="margin-top:30px;margin-left:30px;" /></a>
    </div>




</body>

</html>

